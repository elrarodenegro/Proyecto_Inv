<video src="/img/videos/video3.mp4" muted loop autoplay></video>
<div class="overlay"></div>

<div class="container p-5">
  <div class="text">
    <h3>Iniciar Sesión</h3>
  </div>
  <div class="col-md-4 mx-auto">
    <div class="card mt-4 text-center">
      <img class="mx-auto d-block m-8" src="/img/logos/Streamov.png" alt="Logo" width="30%">
      <div class="card-body">
        <form action="/users/signin" method="POST">
          <div class="form-group">
            <div class="required field">
              <label for="email">Correo</label>
              <input type="email" class="form-control" name="email" placeholder="Correo" autofocus>
            </div>

          </div>
          <div class="form-group">
            <div class="required field">
              <label for="password">Contraseña</label>
              <input type="password" class="form-control" name="password" placeholder="Contraseña">
            </div>
          </div>
          <button class="btn btn-primary btn-block">
            Ingresar
          </button>
        </form>
      </div>
    </div>
  </div>

</div>