<video src="/img/videos/Money2.mp4" muted loop autoplay></video>
<div class="overlay"></div>

<div class="container p-5">
  <a href="/users" class="btn bg-blue m-0"><i class="fas fa-arrow-left"></i></a>
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-header">
          Registro
        </div>
        <div class="card-body">
          <form action="/users/signup" method="POST">
            <div class="form-group ">
              <div class="required field">
                <label for="name">Nombre</label>
                <input type="text" class="form-control" name="name" placeholder="Nombre" />
              </div>
            </div>

            <div class="form-group">
              <div class="required field">
                <label for="email">Correo</label>
                <input type="email" class="form-control" name="email" placeholder="Correo" />
              </div>
            </div>

            <div class="form-group">
              <div class="input-group mb-3">
                <div class="input-group-prepend required field">
                  <label class="input-group-text">Tipo de Cuenta</label>
                </div>
                <select class="custom-select" name="type" value="{{type}}">
                  <option selected value='NaN'>Seleccionar...</option>
                  <option value="Administrador"> Administrador </option>
                  <option value="Usuario"> Usuario </option>
                </select>
              </div>
            </div>

            <div class="form-group">
              <div class="input-group mb-3">
                <div class="input-group-prepend required field">
                  <label class="input-group-text">Permisos de acceso</label>
                </div>
                <select class="custom-select" name="permissions" value="{{permissions}}">
                  <option selected value='NaN'>Seleccionar...</option>
                  <option value="true"> Acceso Total </option>
                  <option value="false"> Sin Acceso </option>
                </select>
              </div>
            </div>

            <div class="form-group">
              <div class="required field">
                <label for="email">Contrase単a</label>
                <input type="password" class="form-control" name="password" placeholder="Contrase単a">
              </div>
            </div>

            <div class="form-group">
              <div class="required field">
                <label for="email">Confirmar Contrase単a</label>
                <input type="password" class="form-control" name="confirm_password" placeholder="Confirmar Contrase単a">
              </div>
            </div>

            <button class="btn btn-primary btn-block">
              Registrar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>